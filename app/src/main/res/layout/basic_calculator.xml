<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:paddingTop="20dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/topNavLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/user" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/basicCalculatorSelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:layout_marginEnd="3dp"
            android:textAllCaps="false"
            android:background="@drawable/calculator_selected_button"
            android:text="@string/basic" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/binaryCalculatorSelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:layout_marginStart="3dp"
            android:textAllCaps="false"
            android:background="@drawable/calculator_unselected_button"
            android:text="@string/binary" />

        <ImageView
            android:id="@+id/history"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/history" />

        <ImageView
            android:id="@+id/save"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/save_svgrepo_com" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/calculator_clear_button"
                android:minWidth="70dp"
                android:text="C"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/calculator_normal_button"
                android:minWidth="70dp"
                android:text="("
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/calculator_normal_button"
                android:minWidth="70dp"
                android:text=")"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/calculator_operation_button"
                android:minWidth="70dp"
                android:text="รท"
                android:textSize="25sp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/calculator_normal_button"
                android:minWidth="70dp"
                android:text="7"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/calculator_normal_button"
                android:minWidth="70dp"
                android:text="8"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/calculator_normal_button"
                android:minWidth="70dp"
                android:text="9"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/calculator_operation_button"
                android:minWidth="70dp"
                android:text="ร"
                android:textSize="25sp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/calculator_normal_button"
                android:minWidth="70dp"
                android:text="4"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/calculator_normal_button"
                android:minWidth="70dp"
                android:text="5"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/calculator_normal_button"
                android:minWidth="70dp"
                android:text="6"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/calculator_operation_button"
                android:minWidth="70dp"
                android:text="-"
                android:textSize="25sp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/calculator_normal_button"
                android:minWidth="70dp"
                android:text="1"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/calculator_normal_button"
                android:minWidth="70dp"
                android:text="2"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/calculator_normal_button"
                android:minWidth="70dp"
                android:text="3"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/calculator_operation_button"
                android:minWidth="70dp"
                android:text="+"
                android:textSize="25sp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/calculator_clear_button"
                android:minWidth="70dp"
                android:text="Del"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/calculator_normal_button"
                android:minWidth="70dp"
                android:text="0"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/calculator_normal_button"
                android:minWidth="70dp"
                android:text=","
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/calculator_equal_button"
                android:minWidth="70dp"
                android:text="="
                android:textSize="25sp" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>